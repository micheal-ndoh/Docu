generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  submissions   Submission[]
}

model Submission {
  id              String            @id @default(cuid())
  userId          String
  docusealId      Int               @unique // GIS Docusign submission ID
  status          String            @default("pending") // Overall status
  submitterEmail  String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  submitterStatus SubmitterStatus[] // Per-party status tracking

  @@index([userId])
  @@index([docusealId])
  @@index([submitterEmail])
}

// Track status for each party in a submission
model SubmitterStatus {
  id           String     @id @default(cuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  // DocuSeal submitter details
  docusealSubmitterId Int? // DocuSeal's submitter ID
  email               String
  name                String?
  role                String // e.g., "Admin", "Student", "Parent"
  embedSrc            String? // Direct signing link from DocuSeal

  // Status tracking
  status      String    @default("pending") // pending, sent, opened, completed, declined
  sentAt      DateTime?
  openedAt    DateTime?
  completedAt DateTime?
  declinedAt  DateTime?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([submissionId])
  @@index([docusealSubmitterId])
  @@index([email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
